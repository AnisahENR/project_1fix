<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/field_2">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:padding="17.5dp"
    android:background="@drawable/field_2"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/field">
        <EditText
            android:id="@+id/nama"
            android:tooltipText="isikan namamu"
            android:inputType="textPersonName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:hint="Nama"
            android:padding="10dp"
            android:textColor="@color/color_a200"
            android:textColorHint="@color/color_a200"
            android:background="@android:color/transparent"
            android:textSize="15sp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/stroke"/>
        <EditText
            android:id="@+id/no_hp"
            android:inputType="phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="No.Hp"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="@color/color_a200"
            android:textColorHint="@color/color_a200"
            android:background="@android:color/transparent"
            android:textSize="15sp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/alamat"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Alamat (Double click for open maps)"
        android:maxLines="1"
        android:background="@drawable/field"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_a200"
        android:textColorHint="@color/color_a200"
        android:textSize="15sp"
        android:tooltipText="Double click for open maps"/>
    <Spinner
        android:id="@+id/kel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/kelurahan"
        android:prompt="@string/kec"
        android:hint="Kelurahan"
        android:background="@drawable/field_3"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_a200"
        android:textColorHint="@color/color_a200"
        android:textSize="15sp"/>
    <Spinner
        android:id="@+id/drop_kec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/kecamatan"
        android:prompt="@string/kec"
        android:inputType="text"
        android:padding="10dp"
        android:background="@drawable/field_3"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_a200"
        android:textColorHint="@color/color_a200"
        android:textSize="15sp"
        android:drawableRight="@android:drawable/ic_btn_speak_now"/>
    <EditText
        android:id="@+id/masalah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="3"
        android:maxLines="3"
        android:hint="Ceritakan Masalahmu Disini"
        android:inputType="text|textMultiLine"
        android:gravity="top"
        android:padding="10dp"
        android:background="@drawable/field"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_a200"
        android:textColorHint="@color/color_a200"
        android:textSize="15sp"/>
    <Button
        android:id="@+id/foto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unggah Foto"
        android:textColor="@color/color_a200"
        android:background="@drawable/field"
        android:layout_marginTop="10dp"
        android:padding="1dp"
        android:textSize="15sp"/>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:ems="9"
        android:inputType="text"
        android:textColor="@color/black"
        android:padding="5dp"
        />
    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kirim"
        android:layout_marginTop="9dp"
        android:textSize="15sp"
        android:background="@drawable/button_field"
        android:textColor="@color/white"
        android:layout_marginBottom="100dp"/>
</LinearLayout>
</ScrollView>

